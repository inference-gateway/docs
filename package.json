{
  "name": "inference-gateway-docs",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": "24.11.0",
    "npm": "11.6.1"
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint .",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint:md": "markdownlint \"**/*.md\" \"**/*.mdx\" --ignore \"**/node_modules/**\"",
    "lint:md:fix": "markdownlint \"**/*.md\" \"**/*.mdx\" --ignore \"**/node_modules/**\" --fix",
    "generate-sitemap": "tsx scripts/generate-sitemap.ts",
    "generate-search-index": "tsx scripts/generate-search-index.ts",
    "prebuild": "npm run generate-search-index && npm run generate-sitemap",
    "serve": "next build && npx serve out",
    "clean": "rm -rf out && rm -rf .next"
  },
  "dependencies": {
    "@mdx-js/loader": "^3.1.1",
    "@mdx-js/react": "^3.1.1",
    "@next/mdx": "^16.0.3",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@types/mdx": "^2.0.13",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.553.0",
    "mermaid": "^11.12.1",
    "next": "^16.0.3",
    "next-themes": "^0.4.6",
    "prismjs": "^1.30.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "remark-gfm": "^4.0.1",
    "tailwind-merge": "^3.4.0",
    "tw-animate-css": "^1.4.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4.1.17",
    "@types/node": "^24",
    "@types/prismjs": "^1.26.5",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "autoprefixer": "^10.4.22",
    "eslint": "^9",
    "eslint-config-next": "^16.0.3",
    "eslint-config-prettier": "^10.1.8",
    "glob": "^13.0.0",
    "husky": "^9.1.7",
    "markdownlint": "^0.39.0",
    "markdownlint-cli": "^0.46.0",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "tailwindcss": "^4",
    "tsx": "^4.20.6",
    "typescript": "^5"
  }
}
